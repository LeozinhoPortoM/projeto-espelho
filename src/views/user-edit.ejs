<%- include("./partials/head") %>
    <%- include("./partials/header") %>
        <main id="container">
            <h1>Bem vindo ao painel administrativo</h1>
            <h2>Atualizar usuário</h2>
            <% if(locals.error){ %>
                <h2 class="error-alert">
                    <%= error.message %>
                </h2>
                <% } %>
                    <form action="/user/edit/<%= user.id %>?_method=put" method="post" enctype="multipart/form-data">
                        <input value="<%= user.nome %>" type="text" name="nome" placeholder="Nome" />
                        <input value="<%= user.sobrenome %>" type="text" name="sobrenome" placeholder="Sobrenome" />
                        <input value="<%= user.email %>" type="email" name="email" placeholder="Email" />
                        <input value="<%= user.idade %>" type="number" name="idade" placeholder="Idade" />
                        <input type="file" name="avatar"
                            placeholder="Número do Avatar" />
                        <button type="submit">Atualizar</button>
                    </form>
        </main>
        <%- include("./partials/footer") %>