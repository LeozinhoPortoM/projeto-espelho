<%- include("./partials/head") %>
    <%- include("./partials/header") %>
        <main id="container">
            <h1>Bem vindo ao painel administrativo</h1>
            <h2>Adicionar usu√°rio</h2>
            <form action="/user/create" method="post" enctype="multipart/form-data">

                <label for="nome">Nome</label>
                <input type="text" name="nome" value="<%= locals.old ? old.nome : null %>" />
                <% if(locals.errors && errors.nome){ %>
                    <div class="error-alert">
                        <%= errors.nome.msg %>
                    </div>
                    <% } %>

                        <label for="sobrenome">Sobrenome</label>
                        <input type="text" name="sobrenome" value="<%= locals.old ? old.sobrenome : null %>">
                        <% if(locals.errors && errors.sobrenome){ %>
                            <div class="error-alert">
                                <%= errors.sobrenome.msg %>
                            </div>
                            <% } %>

                                <label for="email">E-mail</label>
                                <input type="email" name="email" value="<%= locals.old ? old.email : null %>" />
                                <% if(locals.errors && errors.email){ %>
                                    <div class="error-alert">
                                        <%= errors.email.msg %>
                                    </div>
                                    <% } %>

                                        <label for="senha">Senha</label>
                                        <input type="password" name="senha"
                                            value="<%= locals.old ? old.senha : null %>">
                                        <% if(locals.errors && errors.senha){ %>
                                            <div class="error-alert">
                                                <%= errors.senha.msg %>
                                            </div>
                                            <% } %>

                                                <label for="avatar">Avatar</label>
                                                <input type="file" name="avatar"
                                                    value="<%= locals.old ? old.avatar : null %>" />
                                                <% if(locals.errors && errors.avatar){ %>
                                                    <div class="error-alert">
                                                        <%= errors.avatar.msg %>
                                                    </div>
                                                    <% } %>

                                                        <button type="submit">Adicionar</button>
            </form>
        </main>
        <%- include("./partials/footer") %>