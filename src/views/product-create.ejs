<%- include("./partials/head") %>
    <%- include("./partials/header") %>

        <main id="container">
            <h1>Bem vindo ao painel administrativo</h1>
            <h2>Adicionar produtos</h2>
            <% if(locals.errors){ %>
                <ul class="error-alert">
                    <% for(let error in errors){ %>
                        <li>
                            <b>
                                <%= error %>:
                            </b>
                            <%= errors[error].msg %>
                        </li>
                        <% } %>
                </ul>
                <% } %>
            <form action="/product/create" method="POST">
                <input type="text" name="nome" id="" placeholder="Nome do produto" ><br><br>
                <input type="text" name="descricao" id="" placeholder="Descrição do produto"><br><br>
                <input type="number" name="preco" id="" placeholder="Preço do produto"><br><br>
                <input type="text" name="tamanho" id="" placeholder="Tamanho do produto"><br><br>
                <button type="submit">Salvar</button>
            </form>
        </main>

        <%- include('./partials/footer') %>